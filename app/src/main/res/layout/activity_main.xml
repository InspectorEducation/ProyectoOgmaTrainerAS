<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/eTNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp"
        android:hint="Introduce tu usuario"/>

    <EditText
        android:id="@+id/eTPassoword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTNombre"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="Introduce tu contraseña"/>

    <RadioButton
        android:id="@+id/rBTerminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTPassoword"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Acepto términos y condiciones"/>

    <Button
        android:id="@+id/bIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rBTerminos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Ingresar"/>

</RelativeLayout>