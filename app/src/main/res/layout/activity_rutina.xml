<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fodo"
    android:backgroundTint="#CE101010"
    android:backgroundTintMode="screen"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C3171616">


        <Button
            android:id="@+id/botonpecho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="126dp"
            android:layout_marginHorizontal="131dp"
            android:text="ver mas...">
        </Button>

    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="131dp"
        android:fontFamily="sans-serif-black"
        android:text="Rutinas"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#F6F5F5"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:background="#16FDFDFD"
        android:src="@drawable/pectoral" />

    <Button
        android:id="@+id/botonbicep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="131dp"
        android:layout_marginTop="269dp"
        android:text="ver mas..."></Button>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@id/imageView1"
        android:paddingLeft="10dp"
        android:text="Quieres destacarte en la playa? Nuestra rutina de pectoral te dará el pecho que siempre has querido."
        android:textAllCaps="true"
        android:textColor="#EDE7E7"
        android:textColorHint="#619F8F8F" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="195dp"
        android:background="#12FFFCFC"

        android:src="@drawable/biceps" />
    <Button
        android:id="@+id/botonpierna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginHorizontal="131dp"
        android:text="ver mas...">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="205dp"
        android:layout_toEndOf="@id/imageView2"
        android:paddingLeft="10dp"
        android:text="Dale forma a tus brazos y aumenta su tamaño con nuestra rutina de bíceps diseñada para construir músculo"
        android:textAllCaps="true"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="355dp"
        android:background="#0FF4F2F2"

        android:src="@drawable/pierna" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_toEndOf="@id/imageView3"
        android:paddingLeft="10dp"
        android:text="Desafía a tus piernas con nuestra rutina de pierna diseñada para quemar grasa y tonificar tus músculos."
        android:textAllCaps="true"
        android:textColor="#ECE9E9" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="505dp"
        android:background="#22F4F2F2"
        android:src="@drawable/abdomen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="505dp"
        android:layout_toEndOf="@id/imageView4"
        android:paddingLeft="10dp"
        android:text="Dale forma a tu abdomen y consigue los abdominales que siempre has querido con nuestra rutina diseñada para quemar grasa y tonificar tus músculos."
        android:textAllCaps="true"
        android:textColor="#F3EDED" />

    <Button
        android:id="@+id/botonabdomen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="131dp"
        android:layout_marginTop="595dp"
        android:text="ver mas...">

    </Button>

</RelativeLayout>